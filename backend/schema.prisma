// Modify your Keystone config when you want to change this.

datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id                      String     @id @default(cuid())
  userName                String     @unique @default("")
  email                   String     @unique @default("")
  userType                String
  photo                   UserImage? @relation("User_photo", fields: [photoId], references: [id])
  photoId                 String?    @unique @map("photo")
  password                String?
  passwordResetToken      String?
  passwordResetIssuedAt   DateTime?
  passwordResetRedeemedAt DateTime?
}

model UserImage {
  id      String  @id @default(cuid())
  image   String?
  altText String  @default("")
  user    User?   @relation("User_photo")
}

model Lesson {
  id          String  @id @default(cuid())
  subject     String  @default("")
  level       String?
  description String  @default("")
  price       Int?
  status      String? @default("DRAFT")
}

model Product {
  id          String        @id @default(cuid())
  name        String        @default("")
  description String        @default("")
  photo       ProductImage? @relation("Product_photo", fields: [photoId], references: [id])
  photoId     String?       @unique @map("photo")
  status      String?       @default("DRAFT")
  price       Int?
}

model ProductImage {
  id      String   @id @default(cuid())
  image   String?
  altText String   @default("")
  product Product? @relation("Product_photo")
}